<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@drawable/saya"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humaidi Zakaria"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#6FB56868"
            android:layout_gravity="center"
            android:padding="6dp"
            android:layout_marginTop="40dp"/>

    </FrameLayout>

    <WebView
        android:id="@+id/wv_cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fl_header"
        android:layout_above="@id/btn_hubungi"/>

    <Button
        android:id="@+id/btn_hubungi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hubungi Saya"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#E24989D8"
        android:clickable="true"
        android:height="65dp"/>


</RelativeLayout>